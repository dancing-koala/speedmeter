<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/anthracite"
    android:orientation="vertical">

    <com.dancing_koala.speedmeter.ui.views.SpeedMeterView
        android:id="@+id/smv_speedmeterview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_start_tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/btn_stop_tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_start_tracking"
        android:text="Stop" />

    <TextView
        android:id="@+id/txtv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="54.4 km/h"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:font="Custom1" />


    <Button
        android:id="@+id/btn_start_speed_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Start Speed Test" />

    <Button
        android:id="@+id/btn_stop_speed_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_toRightOf="@+id/btn_start_speed_test"
        android:text="Stop Speed Test" />


</RelativeLayout>
